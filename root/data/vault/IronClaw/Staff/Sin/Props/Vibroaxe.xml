      <Core:Property property="merry:react-post:unwield">
         X[M] \$delay(1, TRUE, "030f");                
EmitTo( \$actor, "You release the hilt of your vibroaxe and it stops vibrating." );               
EmitIn( \$actor."base:environment", "As "+Describe(\$actor)+" releases the hilt of "+\$actor."base:possessive"+" vibroaxe, it stops vibrating.", \$actor );

Set(\$actor, "combat:actions", Get(\$actor, "combat:actions") - Get(this, "weapon:speed"));  
 
if(Get(\$actor, "combat:actions") \< Get(\$actor, "combat:actions:current")) \{ 
    Set(\$actor, "combat:actions:current", Get(\$actor, "combat:actions")); 
\} 


/* set weapon statistics */
Set(\$actor, "combat:weapon", nil);
Set(\$actor, "combat:weapon:name", "your " + Get(\$actor, "combat:natural:name"));
Set(\$actor, "combat:weapon:name:thirdp", \$actor."base:possessive" + " " + Get(\$actor, "combat:natural:name"));
Set(\$actor, "combat:weapon:attack", Get(\$actor, "combat:natural:attack"));  
Set(\$actor, "combat:weapon:defence", Get(\$actor, "combat:natural:defence"));  
Set(\$actor, "combat:parry", Get(\$actor, "combat:natural:parry")); 
Set(\$actor, "combat:weapon:damage_type", Get(\$actor, "combat:natural:damage_type"));  
Set(\$actor, "combat:weapon:type", "unarmed"); 
 
/*start actions regenerating in the victim*/ 
Call(\$\{IronClaw:Lib:Combat:Lib-old\}, "regenerate_actions", \$victim: \$actor); 
 
return TRUE;
      </Core:Property>
      <Core:Property property="merry:react-post:wield">
         X[M] \$delay(1, TRUE, "030f");                
EmitTo( \$actor, "You grip the hilt of your vibroaxe and it begins vibrating." );               
EmitIn( \$actor."base:environment", "As "+Describe(\$actor)+" grips the hilt of "+\$actor."base:possessive"+" vibroaxe, it begins vibrating.", \$actor );

Set(\$actor, "combat:actions", Get(\$actor, "combat:actions") + Get(this, "weapon:speed"));  
 
if(Get(\$actor, "combat:actions") \< Get(\$actor, "combat:actions:current")) \{ 
    Set(\$actor, "combat:actions:current", Get(\$actor, "combat:actions")); 
\} 
 
/* set weapon statistics */  
Set(\$actor, "combat:weapon", \$this);
Set(\$actor, "combat:weapon:name", Describe(this, nil, \$actor));
Set(\$actor, "combat:weapon:name:thirdp", Describe(this, \$actor));
Set(\$actor, "combat:weapon:attack", Get(this, "weapon:attack"));  
Set(\$actor, "combat:weapon:defence", Get(this, "weapon:defence"));  
Set(\$actor, "combat:parry", Get(this, "weapon:parry"));  
Set(\$actor, "combat:weapon:damage_type", Get(this, "weapon:damage_type"));  
Set(\$actor, "combat:weapon:type", Get(this, "weapon:type")); 

/*start actions regenerating in the victim*/ 
Call(\$\{IronClaw:Lib:Combat:Lib-old\}, "regenerate_actions", \$victim: \$actor); 
 
return TRUE;
