      <Core:Property property="merry:react:enter-into%adventure">
         X[M] string detail;

/* check if they are leaving for an AA, and if so, what we need to do */

/* sanity checking */
if(!\$target) return TRUE;

detail = NRefDetail(\$target);

/* a sequence of ifs. Can't use switch because of delays */
if(detail == "path-marsh") \{
    /* do we need to create a new adventure? */
    if(\$dest \&\& NRefOb(\$dest) == \$\{Ironclaw:AAs:Framework:RandomRoom\}) \{
      \$this."details:path-marsh:exit:dest:local" = Call(\$\{Ironclaw:AAs:Framework:AdventureDB\}, "createadventure", \$entrance: \$this, \$adventure: "marsh", \$debugger: nil);
      /* delay them then re-enter the marsh */
      \$delay(1, FALSE, "283f");
      /* re-enter the path */
      if(!\$imperative) \{
        Act(\$actor, "enter", \$what: \$target);
      \} else \{
        Social(\$actor, \$imperative, \$adverb, \$evoke, \$(gait_exit:preposition), \$target);
      \}
      return FALSE;
    \}
    NRefOb(\$this."details:path-marsh:exit:dest:local")."aa:settings".members \|= (\{ NRefOb(\$actor) \});
    \$this."aa:marsh:closetime" = time()+10*2; /* close in two hours */
    \$delay(10*3, TRUE, "b56b"); /* wait three hours */
    /* if it's time to close, close the adventure (so a new one can be created) */
    if(!\$this."aa:marsh:closetime" \|\| time() \> \$this."aa:marsh:closetime") \{
      \$this."details:path-marsh:exit:dest:local" = NewNRef(\$\{Ironclaw:AAs:Framework:RandomRoom\}, "default");
    \}
    return TRUE;
    break;
\}

return TRUE;
