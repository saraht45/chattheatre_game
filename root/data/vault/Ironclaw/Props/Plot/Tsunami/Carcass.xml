      <Core:Property property="merry:react-post:break-dob">
         X[M] if(\$dob \&\& sizeof(\$dob) == 1 \&\& NRefDetail(\$dob[0]) == "beak") \{   
   \$env = \$this."base:environment";   
   \$inv = \$env."base:inventory";   
   for(\$i=0;\$i\<sizeof(\$inv);\$i++) \{   
      if(contains(Str(NRefOb(\$inv[\$i])), "Chatters" )) \{   
         \$spawn = Spawn(\$\{Ironclaw:Props:Plot:Tsunami:OctopusBeak\});   
\$delay(0.2, TRUE, "3df1");   
         EmitTo(\$inv[\$i], Describe(\$spawn)+ " soars from the smashed octopus' beak and lands in your hands. How lucky... that could have taken your eye out!");   
         \$spawn."base:environment" = \$inv[\$i];   
      \}   
   \}   
   EmitIn(\$env, "Pieces of shattered octopus beak soar skyward and coincidentally each person nearby caught one before they landed. The world is an odd and wonderful place."); 
\$this."details:beak:hidden" = 1;    
\}   
return TRUE;
      </Core:Property>
      <Core:Property property="merry:react:pry-dob">
         X[M] if(!\$this."treasurechest:quantity") \{ \$this."treasurechest:quantity" = 1; \};     
/* check if octopus has treasure chest */     
if(\$this."trait:treasurechest") \{EmitTo(\$actor, "Someone already removed the treasure chest contained within the octopus' wound."); return FALSE; \};     
/* emit removing the treasure chest */     
EmitTo(\$actor, "You reach into the dead octopus' wound, prodding and prying until you successfully manage to excavate the object hidden within. It's a treasure chest!"); EmitIn(\$actor."base:environment", Describe(\$actor)+" reaches into the dead octopus' wound, prodding and prying until successfully managing to excavate the object within. It's a treasure chest!", \$actor);     
/* spawn the treasure chest, set counter */     
\$treasurechest = Spawn(\$\{Ironclaw:Props:Plot:Tsunami:Chest\});     
\$treasurechest."base:environment" = \$actor;     
\$this."treasurechest:quantity" -= 1;     
if(\$this."treasurechest:quantity" == 0) \{\$this."trait:treasurechest" = TRUE; return FALSE; \}     
return TRUE;
      </Core:Property>
      <Core:Property property="merry:react:sever-dob">
         X[M] if(sizeof(\$dob) == 1 \&\& NRefDetail(\$dob[0]) == "tentacles") \{           
\$carcass = NRefOb(\$this);           
return Call(nil /* defunct */, "spawntentacles", \$actor: \$actor, \$carcass: \$carcass);           
\}          
return TRUE;
