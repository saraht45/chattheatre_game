      <Core:Property property="merry:react:grab-dob">
         X[M] /* spawn the chitin */
object *grabbers;
int i;

grabbers = Arr(\$this."trait:grabbed");
for (i = 0; i \< sizeof(grabbers); i++) \{
  if(grabbers[i] == \$actor) \{
    EmitTo(\$actor, "You can only have one chitin chunk, you greedy bastage.");
    return FALSE;
  \}
\}

EmitTo(\$actor, "You grab a chunk of chitin from one of the the felled ghost spiders.");
EmitIn(\$actor."base:environment", Describe(\$actor)+" grabs a chunk of chitin from one of the felled ghost spiders.", \$actor);
   \$feather = Spawn(\$\{Ironclaw:Animals:Caves:GhostSpider:Loot:ChitinChunk\});
   \$feather."base:environment" = \$actor;

\$this."trait:grabbed" = (Arr(\$this."trait:grabbed") - (\{ \$actor \})) + (\{ \$actor \});

return FALSE;
      </Core:Property>
      <Core:Property property="merry:react:pluck-dob">
         X[M] /* spawn the eyeball */
object *pluckers;
int i;

pluckers = Arr(\$this."trait:plucked");
for (i = 0; i \< sizeof(pluckers); i++) \{
  if (pluckers[i] == \$actor) \{
    EmitTo(\$actor, "You can only have one spider eye, you filthy animal.");
    return FALSE;
  \}
\}

EmitTo(\$actor, "You grab a single large eye from the head of one of the the felled ghost spiders.");
EmitIn(\$actor."base:environment", Describe(\$actor)+" grabs a single large eye from the head of one of the felled ghost spiders.", \$actor);
   \$feather = Spawn(\$\{Ironclaw:Animals:Caves:GhostSpider:Loot:EyeballGem\});
   \$feather."base:environment" = \$actor;

\$this."trait:plucked" = (Arr(\$this."trait:plucked") - (\{ \$actor \})) + (\{ \$actor \});

return FALSE;
