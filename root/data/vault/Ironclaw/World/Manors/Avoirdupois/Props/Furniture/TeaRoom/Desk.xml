      <Core:Property property="merry:react:flip-dob">
         X[M] if (NRefDetail(\$target) == "lid")           
  \{
 /* check there is a scroll available */             
if(\$this."trait:quantity" \< 1) \{             
  EmitTo(\$actor, "The desk is currently out of scrolls, check again later and a servant should restock it.");             
  return FALSE;             
\}             
             
/* reduce the amount of scrolls */             
\$this."trait:quantity" -= 1;             
             
/* create the scroll object and give it to the player */             
\$object = Spawn(\$\{Ironclaw:Props:Misc:Scrolls:AvoiScroll\}); \$object."base:environment" = \$actor;             
             
/* emit message to player and room */             
EmitTo(\$actor, "You flip open the desk lid and grab a scroll from inside.");             
EmitIn(\$actor."base:environment", Describe(\$actor)+" flips open the desk lid and grabs a scroll from inside.", \$actor);             
             
return TRUE;
\}
      </Core:Property>
      <Core:Property property="merry:setprop-post:trait:quantity">
         X[M] /* stop when we hit 10 scrolls in the desk */             
if(\$this."trait:quantity" \>= 10) return TRUE;             
             
/* wait a while, then add a scroll */             
\$delay((2*24*60), TRUE, "9d85");             
if(\$this."trait:quantity" \< 15)             
  \$this."trait:quantity" += 1;             
             
return TRUE;
      </Core:Property>
