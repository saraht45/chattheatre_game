      <Core:Property property="merry:react-pre:extinguish-dob">
         X[M] if (NRefDetail(\$target) == "logs")              
  \{   
  if (!\$this."trait:lit")  
    \{    
    EmitTo( \$actor, "The logs in the fireplace are not lit." ); 
    return FALSE; 
    \}            
  if (\$this."trait:lit")  
    \{    
    EmitTo( \$actor, "With a hiss you extinguish the fire within the fireplace." );                 
    EmitIn( \$actor."base:environment", "With a hiss you see "+Describe(\$actor)+" extinguish the fire within the fireplace.", \$actor );    
    Set(\$this, "details:logs:luminosity", 0.0); 
    \$this."trait:lit" = nil;             
    \} 
  \}
      </Core:Property>
      <Core:Property property="merry:react-pre:light-dob">
         X[M] if (NRefDetail(\$target) == "logs")              
  \{ 
  if (\$this."trait:lit")  
    \{    
    EmitTo( \$actor, "The logs in the fireplace are already lit." ); 
    return FALSE; 
    \}              
  if (!\$this."trait:lit")  
    \{    
    EmitTo( \$actor, "You light the logs within the fireplace, bringing a warm bright glow to the western end of the study." );                 
    EmitIn( \$actor."base:environment", "You see "+Describe(\$actor)+" llight the logs within the fireplace, bringing a warm bright glow to the western end of the study.", \$actor );    
    Set(\$this, "details:logs:luminosity", 20.0); 
    \$this."trait:lit" = 1;             
    \} 
  \}
