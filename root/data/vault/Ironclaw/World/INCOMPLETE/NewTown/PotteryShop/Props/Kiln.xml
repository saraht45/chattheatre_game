      <Core:Property property="merry:react-pre:empty-dob">
         X[M] if(\$dob) \{   /* Basic dob check start */            
if(sizeof(\$dob) == 1) \{  /* size of dob start */            
\$slot = NRefDetail(\$dob[0]);  /* grab the detail they are refering to */            
if(\$slot == "oven-1" \|\| \$slot == "oven-2" \|\| \$slot == "oven-3" \|\| \$slot == "oven-4" \|\| \$slot == "oven-5" \|\| \$slot == "oven-6") \{          
/* EmitTo(\$actor, "Passed slot");    */      
     
if(Get(\$this, "fire:array:"+\$slot)) \{                   
\$array = Get(\$this, "fire:array:"+\$slot);                   
\} else \{     
EmitTo(\$actor, "Nothing in that opening to retrieve.");     
return FALSE;     
\}     
/* EmitTo(\$actor, "Passed array");     */    
        
\$object = \$array[0]; /* grab the object from the array */           
/* EmitTo(\$actor, "Passed object");     */     
\$env = \$actor; /* prepare the actor as the environment */           
/* EmitTo(\$actor, "Passed env");     */    
Set(\$this, "fire:array:"+\$slot, nil); /* Empty or remove the array */     
           
/* Need to stop the firing process and script in the object here */           
           
EmitTo(\$actor, "You empty the oven and retrieve " +Describe(\$object)+ "."); /* Emit before object changes environment */           
EmitIn(\$actor."base:environment", Describe(\$actor)+ " retrieves " +Describe(\$object)+ " from one of the ovens in the kiln.", \$actor);           
\$object."base:environment" = \$env; /* move the object */           
return FALSE; /* No need to show the parsers version of the action */           
\} else \{            
/* not an oven detail so let the parser handle it as an rp action. */           
return TRUE;            
\}           
\} else \{              
EmitTo(\$actor, "One thing at a time please.");              
\}  /* size of dob end */            
\} /* Basic dob check end */
