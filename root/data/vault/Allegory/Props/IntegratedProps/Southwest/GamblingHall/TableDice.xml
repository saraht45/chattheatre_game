      <Core:Property property="merry:react-post:roll-dob">
         X[M] /* The player rolls the dice and the rolls are displayed to the players. */

\$chip = \$\{Ironclaw:Props:Games:GamblingChip\};

/* Generate two random numbers for the dice roll. Display these numbers to the players. */
\$die1 = random(6)+1;
\$die2 = random(6)+1; 
\$delay(2, TRUE, "e566");
EmitIn(\$actor."base:environment", "A pair of dice displays a "+Str(\$die1)+" and a "+Str(\$die2)+".");


/* Add the two values of the dice and display the sum to the players. */
\$roll1 = \$die1 + \$die2;
EmitIn(\$actor."base:environment", "The sum of the roll is "+Str(\$roll1)+".");

/* Determine if the player wins, loses, or must roll again. */
if (\$roll1 == 7 \|\| \$roll1 == 11) \{
   \$delay(2, TRUE, "0a21");
   EmitTo(\$actor, "You win!");
   EmitIn(\$actor."base:environment", +Describe(\$actor)+ " wins!", \$actor);
   \$delay(2, TRUE, "7be6");
   EmitTo(\$actor, "A dice dealer hands you a gaming chip.");
   EmitIn(\$actor."base:environment", "A dice dealer hands " +Describe(\$actor)+ " a gaming chip.", \$actor);
   \$winnings = Spawn(\$chip);
   \$winnings."base:environment" = \$actor;
   return TRUE;
\} else if (\$roll1 == 2 \|\| \$roll1 == 3 \|\| \$roll1 == 12) \{
   \$delay(2, TRUE, "9423");
   EmitTo(\$actor, "You lose!");
   EmitIn(\$actor."base:environment", +Describe(\$actor)+ " loses!", \$actor);
   return TRUE;
\} else \{
   \$delay(2, TRUE, "4911");
   EmitTo(\$actor, "You roll again...");
   EmitIn(\$actor."base:environment", +Describe(\$actor)+ " rolls again...", \$actor);
\}

for (\$counter = 0; \$counter \< 100; ++\$counter) \{

   /* The dice are rolled again (two random numbers) and the rolls are displayed to the players. */
   \$die3 = random(6)+1;
   \$die4 = random(6)+1;
   \$delay(2, TRUE, "d201");
   EmitIn(\$actor."base:environment", "A pair of dice displays a "+Str(\$die3)+" and a "+Str(\$die4)+".");

   /* Add the two values of the dice and display the sum to the players. */
   \$roll2 = \$die3 + \$die4;
   EmitIn(\$actor."base:environment", "The sum of the roll is "+Str(\$roll2)+".");

   /* Determine if the player wins, loses, or must roll again. */
   if (\$roll2 == 7) \{
      \$delay(2, TRUE, "3071");
      EmitTo(\$actor, "You lose!");
      EmitIn(\$actor."base:environment", +Describe(\$actor)+ " loses!", \$actor);
      return TRUE;
   \} else if (\$roll2 == \$roll1) \{
      \$delay(2, TRUE, "7588");
      EmitTo(\$actor, "You win!");
      EmitIn(\$actor."base:environment", +Describe(\$actor)+ " wins!", \$actor);
      \$delay(2, TRUE, "3673");
      EmitTo(\$actor, "A dice dealer hands you a gaming chip.");
      EmitIn(\$actor."base:environment", "A dice dealer hands " +Describe(\$actor)+ " a gaming chip.", \$actor);
      \$winnings = Spawn(\$chip);
      \$winnings."base:environment" = \$actor;
      return TRUE;
   \} else \{
      \$delay(2, TRUE, "9f8d");
      EmitTo(\$actor, "You roll again...");
      EmitIn(\$actor."base:environment", +Describe(\$actor)+ " rolls again...", \$actor);
   \}
return FALSE;
\}
